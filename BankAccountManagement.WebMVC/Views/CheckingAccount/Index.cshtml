@model IEnumerable<BankAccountManagement.Models.CheckingAccountListItem>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center mt-4">Checking Accounts</h2>


<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.CheckingAccountId)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.CheckingAccountBalance)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.CustomerName)
            </th>
            <th></th>
        </tr>
    </thead>

@foreach (var item in Model) {
    <tr>
        <th class="row">
            @Html.DisplayFor(modelItem => item.CheckingAccountId)
        </th>
        <td>
            @Html.DisplayFor(modelItem => item.CheckingAccountBalance)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {  id=item.CheckingAccountId}) |
            @Html.ActionLink("Details", "Details", new { id = item.CheckingAccountId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.CheckingAccountId })
        </td>
    </tr>
}

</table>
<p>
    @Html.ActionLink("Create New", "Create", null, htmlAttributes: new { @class = "btn btn-outline-light" })
</p>
