@model IEnumerable<BankAccountManagement.Models.SavingsAccountListItem>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center mt-4">Savings Accounts</h2>
<div class="center-create">
    <p>
        @Html.ActionLink("Create New", "Create", null, htmlAttributes: new { @class = "btn btn-outline-light" })
    </p>
</div>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.SavingsAccountId)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.SavingsBalance)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.CustomerName)
            </th>

            <th></th>
        </tr>
    </thead>

@foreach (var item in Model) {
    <tr>
        <th scope="row">
            @Html.DisplayFor(modelItem => item.SavingsAccountId)
        </th>
        <td>
            @Html.DisplayFor(modelItem => item.SavingsBalance)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {  id=item.SavingsAccountId }, htmlAttributes: new { @class = "btn btn-sm btn-warning" }) |
            @Html.ActionLink("Details", "Details", new { id = item.SavingsAccountId }, htmlAttributes: new { @class = "btn btn-sm btn-info" }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.SavingsAccountId }, htmlAttributes: new { @class = "btn btn-sm btn-danger" })
        </td>
    </tr>
}

</table>

